<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.looky.lookyapp.GenderActivity">

    <ImageView
        android:id="@+id/genderImage"
        android:src="@drawable/gender"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="성별을 알려주세요!"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:id="@+id/manLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:alpha="0.5"
            >

            <ImageButton
                android:id="@+id/manButton"
                android:background="@drawable/man"
                android:layout_width="140dp"
                android:layout_height="140dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="남성" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/womanLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:alpha="0.5"
            >

            <ImageButton
                android:id="@+id/womanButton"
                android:background="@drawable/woman"
                android:layout_width="140dp"
                android:layout_height="140dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="여성" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="60dp"
        android:text="다음"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:alpha="0.5"
        />

</RelativeLayout>
